<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageId>NextGenSoftware.Holochain.HoloNET.Client</PackageId>
    <Company>NextGen Software Ltd</Company>
    <Product>HoloNET Holochain Client</Product>
	<Title>HoloNET Holochain Client</Title>
	<Summary>The world's first .NET &amp; Unity client for Holochain.</Summary>
    <Description>The world's first .NET &amp; Unity client for Holochain.</Description>
    <PackageProjectUrl>https://github.com/NextGenSoftwareUK/holochain-client-csharp</PackageProjectUrl>
    <PackageIcon>hc logo.png</PackageIcon>
    <Authors>David Ellams (NextGen Software Ltd)</Authors>
    <PackageTags>holochain;net;unity</PackageTags>
    <PackageReleaseNotes>Updated to work with latest NextGenSoftware.Logging v1.1.</PackageReleaseNotes>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/NextGenSoftwareUK/holochain-client-csharp</RepositoryUrl>
    <Copyright>Copyright © NextGen Software Ltd 2022</Copyright>
    <PackageReadmeFile>README.md</PackageReadmeFile>
	  <!--<PackageLicenseExpression>GNU GPLv3</PackageLicenseExpression>-->
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <Version>1.1.2</Version>
    <!--<PackageLicenseFile>..\LICENSE</PackageLicenseFile>-->

	  <AutoGenerateBindingRedirects>false</AutoGenerateBindingRedirects>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="HolochainBinaries\hc.exe" />
    <None Remove="HolochainBinaries\holochain.exe" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="HolochainBinaries\hc.exe">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="HolochainBinaries\holochain.exe">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\..\OneDrive\Dropbox\Our World\Prototype\holochain\hc logo.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MessagePack" Version="2.4.35" />
    <PackageReference Include="MsgPack.Cli" Version="1.0.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="System.Threading.Tasks.Extensions" Version="4.5.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\NextGenSoftware.WebSocket\NextGenSoftware.WebSocket.csproj" />
  </ItemGroup>

</Project>
