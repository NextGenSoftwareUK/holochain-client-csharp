    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/NextGenSoftware.Holochain.HoloNET.Manager;component/Resources/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.DataContext>
        <managers:HoloNETManager />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <!--<RowDefinition Height="120"></RowDefinition>-->
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition x:Name="rowDefButtons" Height="100" MaxHeight="100"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="Blue" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <DockPanel >
            <Menu DockPanel.Dock="Top"  Background="Black" Foreground="WhiteSmoke">
                <MenuItem Header="_HoloNET Manager" Background="Black">
                    <MenuItem Background="Black" Header="_Reboot" Click="btnReboot_Click"/>
                    <MenuItem Background="Black" Header="_Open DNA" x:Name="mnuOpenDna" Click="mnuOpenDna_Click" />
                    <MenuItem Background="Black" Header="_Hide Buttons" Click="btnHideButtons_Click"/>
                    <!--<MenuItem Background="Black" Header="_About" x:Name="mnuAbout" Click="mnuAbout_Click"/>-->
                    <MenuItem Background="Black" Header="_Exit" x:Name="mnuExit" Click="mnuExit_Click"/>
                </MenuItem>
                <MenuItem Header="_ORM" Background="Black">
                    <MenuItem Background="Black" Header="_HoloNET Entry" Click="btnHoloNETEntry_Click" Width="200" Padding="0" Margin="0"/>
                    <MenuItem Background="Black" Header="_HoloNET Collection" Width="200" Click="btnHoloNETCollection_Click" Padding="0" Margin="0"/>
                </MenuItem>
                <MenuItem Header="_hApps" Background="Black">
                    <MenuItem Background="Black" Header="_Install hApp" Click="btnInstall_Click"/>
                    <MenuItem Background="Black" Header="_Refresh hApps" Click="btnRefreshInstalledhApps_Click"/>
                </MenuItem>
                <MenuItem Header="_DNA" Background="Black">
                    <MenuItem Background="Black" Header="_Get DNA Definition" Click="btnGetDNADefinition_Click"/>
                    <MenuItem Background="Black" Header="_Update DNA Defintion" Name="mnuUpdateDNADefintion" Click="mnuUpdateDNADefintion_Click"/>
                </MenuItem>
                <MenuItem Header="_Agent" Background="Black">
                    <MenuItem Background="Black" Header="_Get Agent Info" Click="btnGetAgentInfo_Click"/>
                    <MenuItem Background="Black" Header="_Update Agent Info" x:Name="mnuUpdaeAgentInfo" Click="mnuUpdaeAgentInfo_Click"/>
                </MenuItem>
                <MenuItem Header="_Misc" Background="Black">
                    <MenuItem Background="Black" Header="_Get Storage Info" Click="btnGetStorageInfo_Click"/>
                    <MenuItem Background="Black" Header="_Delete Cloned Cell" Click="btnDeleteCloneCell_Click"/>
                    <MenuItem Background="Black" Header="_Graft Records" Click="btnGraftRecords_Click"/>
                    <MenuItem Background="Black" Header="_Update Coordindators" Click="btnUpdateCoordinators_Click"/>
                </MenuItem>
                <MenuItem Header="_List" Background="Black">
                    <MenuItem Background="Black" Header="_List DNAs" Click="btnListDNAs_Click"/>
                    <MenuItem Background="Black" Header="_List CellIds" Click="btnListCellIds_Click"/>
                    <MenuItem Background="Black" Header="_List Attached Interfaces" Click="btnListAttachedInterfaces_Click"/>
                </MenuItem>
                <MenuItem Header="_Dump" Background="Black">
                    <MenuItem Background="Black" Header="_Dump Network Stats" Click="btnDumpNetWorkStats_Click"/>
                    <MenuItem Background="Black" Header="_Dump Network Metrics" Click="btnDumpNetworkMetrics_Click"/>
                    <MenuItem Background="Black" Header="_Dump State" Click="btnDumpState_Click"/>
                    <MenuItem Background="Black" Header="_Dump Full State" Click="btnFullDump_Click"/>
                </MenuItem>
                <MenuItem Header="_Logs" Background="Black">
                    <MenuItem Background="Black" Header="_Clear Log" Click="btnClearLog_Click"/>
                    <!--<MenuItem Background="Black" Header="_Show Detailed Logs"/>-->
                    <MenuItem  Background="Black" Header="_Show Detailed Logs">
                        <CheckBox Background="Black" Foreground="WhiteSmoke">Yes</CheckBox>
                    </MenuItem>
                    <!--<ToggleButton x:Name="tbTest" BorderThickness="0" Background="Transparent" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch">Show Detailed Logs</ToggleButton>-->
                    <MenuItem Background="Black" Header="_Open Logs" Click="btnShowLog_Click"/>
                </MenuItem>
                <MenuItem Header="_Help" Background="Black">
                    <MenuItem Background="Black" Header="_About" x:Name="mnuAbout" Click="mnuAbout_Click"/>
