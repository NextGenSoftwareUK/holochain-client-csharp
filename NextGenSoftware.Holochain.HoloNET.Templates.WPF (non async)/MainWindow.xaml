                                    Storyboard.TargetName="btnCallZomeFunctionGlowEffect" 
                                    Storyboard.TargetProperty="(DropShadowEffect.Opacity)"
                                    From="0.0" To="1.0" Duration="0:0:0.5" 
                                    AutoReverse="False" RepeatBehavior="1x" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="Button.MouseLeave">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                                    Storyboard.TargetName="btnCallZomeFunctionGlowEffect" 
                                    Storyboard.TargetProperty="(DropShadowEffect.Opacity)"
                                    From="1" To="0" Duration="0:0:0.5" 
                                    AutoReverse="False" RepeatBehavior="1x" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Button.Triggers>
                                </Button>

                                <Button x:Name="btnViewDataEntries" Style="{StaticResource ButtonStyle}" IsEnabled="{Binding Path=IsCallZomeFunctionAndViewDataEntriesEnabled}" Foreground="{Binding Path=DisabledButtonForegroundColour}" FontSize="12"  Cursor="Hand" Background="Black" Margin="10,0,10,10"  Padding="5,5,5,5" Content="View Data Entries" Click="btnViewDataEntries_Click">
                                    <Button.Effect>
                                        <DropShadowEffect x:Name="tbnViewDataEntriesGlowEffect" ShadowDepth="0"
                                            Color="White"
                                            Opacity="0"
                                            BlurRadius="10"/>
                                                    </Button.Effect>

                                                    <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.MouseEnter">
                                        <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                            Storyboard.TargetName="tbnViewDataEntriesGlowEffect" 
                            Storyboard.TargetProperty="(DropShadowEffect.Opacity)"
                            From="0.0" To="1.0" Duration="0:0:0.5" 
                            AutoReverse="False" RepeatBehavior="1x" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="Button.MouseLeave">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                                                Storyboard.TargetName="tbnViewDataEntriesGlowEffect" 
                                                Storyboard.TargetProperty="(DropShadowEffect.Opacity)"
                                                From="1" To="0" Duration="0:0:0.5" 
                                                AutoReverse="False" RepeatBehavior="1x" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Button.Triggers>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <GridSplitter Grid.Column="0" Grid.Row="2" Height="5" HorizontalAlignment="Stretch" />

        <Grid Grid.Row="3" x:Name="gridLog" LayoutUpdated="gridLog_LayoutUpdated">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Log:" Height="40" Margin="10,10,0,0" Foreground="WhiteSmoke" FontWeight="Bold"></Label>
            <ListBox Grid.Row="1" VerticalAlignment="Top"  MinHeight="200" x:Name="lstOutput" Margin="10" Background="Transparent"  Foreground="White"/>
        </Grid>

        <Grid Grid.Row="5">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="150"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                <TextBlock x:Name="txtStatus" TextWrapping="Wrap" FontWeight="Bold"  Text="Status: Ready" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Center" Foreground="WhiteSmoke">
                    <TextBlock.Effect>
                        <DropShadowEffect x:Name="glowEffect" ShadowDepth="0"
                          Color="White"
                          Opacity="0"
                          BlurRadius="10"/>
                    </TextBlock.Effect>

                    <TextBlock.Triggers>
                        <EventTrigger x:Name="eventTriggerAnimateStatus" RoutedEvent="TextBlock.Loaded">
                            <BeginStoryboard>
                                <Storyboard x:Name="sbAnimateStatus">
                                    <DoubleAnimation
                                    Storyboard.TargetName="glowEffect" 
                                    Storyboard.TargetProperty="(DropShadowEffect.Opacity)"
                                    From="0.0" To="1.0" Duration="0:0:0.5" 
                                    AutoReverse="True" RepeatBehavior="1x" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
                <fa:ImageAwesome x:Name="spinner" Icon="Cog" Visibility="Hidden" Spin="True" Foreground="WhiteSmoke" VerticalAlignment="Center" Margin="5,0,0,4" Height="20" Width="20" />
            </StackPanel>
            
            <TextBlock x:Name="txtConnections" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" FontWeight="Bold"  Text="{Binding Path=HoloNETManger.Instance.NumberOfClientConnections}" VerticalAlignment="Center" Margin="0,0,15,10" Foreground="WhiteSmoke">
                <TextBlock.Effect>
                    <DropShadowEffect x:Name="glowEffectConnections" ShadowDepth="0"
                          Color="White"
                          Opacity="0"
                          BlurRadius="10"/>
                </TextBlock.Effect>

                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="TextBlock.Loaded">
                        <BeginStoryboard>
                            <Storyboard x:Name="sbAnimateConnections">
                                <DoubleAnimation
                                    Storyboard.TargetName="glowEffectConnections" 
                                    Storyboard.TargetProperty="(DropShadowEffect.Opacity)"
                                    From="0.0" To="1.0" Duration="0:0:0.5" 
                                    AutoReverse="True" RepeatBehavior="1x" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>
        </Grid>

        <uc:ucConductorSettingsPopup x:Name="ucConductorSettingsPopup" Grid.Row="0" Opacity="0.9" Grid.RowSpan="6" Visibility="Visible"></uc:ucConductorSettingsPopup>
        <uc:ucInstallAppPopup x:Name="ucInstallAppPopup" Grid.Row="0" Opacity="0.9" Grid.RowSpan="6" Visibility="Collapsed"></uc:ucInstallAppPopup>
        <uc:ucCallZomePopup x:Name="ucCallZomePopup" Grid.Row="0" Opacity="0.9" Grid.RowSpan="6" Visibility="Collapsed"></uc:ucCallZomePopup>
        <uc:ucHoloNETEntryPopup x:Name="ucHoloNETEntryPopup" Grid.Row="0" Opacity="0.9" Grid.RowSpan="6" Visibility="Collapsed"></uc:ucHoloNETEntryPopup>
        <uc:ucHoloNETCollectionPopup x:Name="ucHoloNETCollectionPopup" Grid.Row="0" Opacity="0.9" Grid.RowSpan="6" Visibility="Collapsed"></uc:ucHoloNETCollectionPopup>
        <uc:ucHoloNETEntryAndCollectionSharedPopup x:Name="ucHoloNETEntryAndCollectionSharedPopup" Grid.Row="0" Opacity="0.9" Grid.RowSpan="6" Visibility="Collapsed"></uc:ucHoloNETEntryAndCollectionSharedPopup>
    </Grid>
</Window>